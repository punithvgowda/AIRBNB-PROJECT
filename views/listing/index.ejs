<%layout("/layouts/boilerplate")%>
<body>
    <style>
        #filters{
            display: flex;
            flex-wrap: wrap;
        }
        .filters{
             opacity: 0.7;
            margin-top: 2rem;
            margin-right: 3.1rem;

        }
        .filters:hover{
           opacity: 1;
           
           
        }
    </style>
    <div id="filters">
        <div class="filters">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filters">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filters">
           <i class="fa-solid fa-mountain-city"></i>
            <p>Iconic Cities</p>
        </div>
         <div class="filters">
          <i class="fa-solid fa-mountain-sun"></i>
            <p>Amazing Views</p>
        </div>
         <div class="filters">
       <i class="fa-solid fa-umbrella-beach"></i>
            <p>Beach</p>
        </div>
         <div class="filters">
          <i class="fa-solid fa-person-swimming"></i>
            <p>Amazing Pools</p>
        </div>
         <div class="filters">
          <i class="fa-solid fa-gopuram"></i>
            <p>Temples</p>
        </div> 
         <div class="filters">
        <i class="fa-solid fa-campground"></i>
            <p>Camping</p>
        </div>
          <div class="filters">
        <i class="fa-solid fa-tractor"></i>
            <p>Farms</p>
        </div>
          <div class="filters">
   <i class="fa-solid fa-route"></i>
            <p>Trucking</p>
        </div>
        <div class="filters">
   <i class="fa-solid fa-person-snowboarding"></i>
            <p>Surfing</p>
        </div>
   
        
       
    </div>
   
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
    
        <% for (let listings of allListing) { %>
            <div class="col mb-3 listing-card">
                <a href="/listings/<%= listings._id %>" class="linkinglist">
                    <div class="card h-100 shadow-sm">
                        <img 
                            src="<%= listings.image.url || '/path/to/placeholder-image.jpg' %>" 
                            class="card-img-top" 
                            alt="hotel image" 
                            style="height: 20rem; object-fit: cover;">
                            <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <h5 class="card-title card-title mb-0"><b><%= listings.title %></b></h5>
                            <p class="card-text card-title mb-0">
                                â‚¹ <%= listings.price.toLocaleString("en-IN") %>/Night
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
        
</div>



    
</body>
</html>
